# KidsCoins API - Exemplo de Variáveis de Ambiente
# Copie este arquivo para .env e preencha com seus valores

# Database
DATABASE_URL=jdbc:postgresql://localhost:5432/educacao_financeira
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres

# JWT Secret (GERAR CHAVE FORTE PARA PRODUÇÃO!)
# Use: openssl rand -base64 64
JWT_SECRET=sua-chave-secreta-minimo-256-bits-para-desenvolvimento-local-substituir-em-producao

# Spring Profile
SPRING_PROFILES_ACTIVE=dev

# Hibernate
HIBERNATE_DDL_AUTO=update
SHOW_SQL=true

# Logging
LOG_LEVEL=DEBUG

# Server
PORT=8080

